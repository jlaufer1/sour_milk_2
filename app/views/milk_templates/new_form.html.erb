<h1>
  Add a new milk
</h1>


<hr>

<!-- Form milk start -->
<form action="/create_milk" method="post">
<!-- Form milk end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @milk.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for date_milk_expires start -->
  <div class="form-group">
    <label for="date_milk_expires">
      Date milk expires
    </label>

    <!-- Input for date_milk_expires start -->
    <input type="text" id="date_milk_expires" name="date_milk_expires" class="form-control">
    <!-- Input for date_milk_expires end -->
  </div>
  <!-- Label and input for date_milk_expires end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <textarea id="description" name="description" class="form-control" rows="3"></textarea>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <button class="btn btn-block btn-outline-secondary">
    Create milk
  </button>
</form>

<hr>

<a href="/milks">
  Go back
</a>
