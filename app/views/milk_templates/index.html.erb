<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All milks
    </h1>

    <a href="/milks/new" class="btn btn-block btn-outline-secondary">
      Add a new milk
    </a>
  </div>
</div>

<!-- Ransack Code start -->

