<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Milk #<%= @milk.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/milks" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @milk.user %>
          <a href="/milks/<%= @milk.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit milk
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @milk.user %>
          <a href="/delete_milk/<%= @milk.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete milk
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @milk.user.present? %>
          <a href="/users/<%= @milk.user_id %>">
            <%= @milk.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Date milk expires
      </dt>
      <dd>
        <%= @milk.date_milk_expires %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @milk.description %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@milk.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@milk.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

